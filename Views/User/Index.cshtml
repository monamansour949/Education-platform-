@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "All User";
}


<h1 class="text-center">Lsit All Account In Site ... </h1>

<p>
    <a class="offset-10 btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-plus"></i> Create New</a>
</p>


@if(Model.Count()==0){
<div class="alert alert-info">Sorry , No Exist Account .......</div>


}

 <table class="table table-hover table-border text-center" style="box-shadow: 2px 1px 2px 2px silver;border-radius: 10px;"> 
                <thead>
                                <tr class="bg-dark text-light">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </th>
                                   
                                    <th>
                                        <h4>State Account</h4>
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                </thead>

                            <tbody>
                    @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem =>item.Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem =>item.Email)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem =>item.PhoneNumber)
                                </td>
                              
                                    <td>
                                        @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                        {
                                             <a asp-controller="user" asp-action="Lock" class="btn btn-success" asp-route-id="@item.Id">
                                            <i class="fas fa-lock-open"></i>
                                        </a>
                                        }else
                                        {
                                        <a asp-controller="user" asp-action="unLock" class="btn btn-danger" asp-route-id="@item.Id">
                                            <i class="fas fa-lock"></i>
                                        </a>
                                        }
                                       
                                    </td>

                            </tr>

                    }
                </tbody>


                


 </table>
   