@model IEnumerable<ProjectItiTeam.Models.Video>



@if (User.IsInRole("Admin"))
{
    <div class="row " style="margin-top: 1%;text-align: left;">
        <div class="col-lg-12 col-md-12 my-4 text-center">
            <a href="/Video/New" class="btn btn-info form-control w-50 text-light"><strong>Add Video</strong></a>
        </div>
    </div>
}

<div class="row marginTop row">
    @foreach (var video in Model)
    {
         <div class="p-2 box-shadow rounded border col-md-4 col-12">
            <video controls width="100%" height="100%">

            <source src="@video.pathViedoes" type="video/mp4">
            <source src="@video.pathViedoes" type="audio/ogg">
            </video>
          </div>
        @Html.Partial("_VideoSummary", video)
    }
</div>



