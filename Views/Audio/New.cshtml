@model Audio

@{
    Layout="_LayoutCourseDetails";
}


<div class="bg-image" 
     style="background-image: url('~/PhotoUser/banaar.jpg');
            height: 100vh">

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new Audio</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="SaveNew" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control"/>
                                <span asp-validation-for="Name" class="text-success"></span>
                            </div>
                            </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Level.Name" class="control-label"></label>
                                <select asp-for="Level_ID" class ="form-control" asp-items="ViewBag.Course_ID"></select>
                             </div>
                            
                        </div>
                        
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
@*                        <img width="100%" id="ImageUrlPreview" />
*@                        <video width="100%" id="ImageUrlPreview"  autoplay loop alt="Audio-Level"></video>
                    </div>
                    <div class="form-group">
                         <label asp-for="AudioUrl" class="control-label"></label>
                        <input type="file" asp-for="AudioUrl" class="form-control" />
                        <span asp-validation-for="AudioUrl" class="text-danger"></span>
                
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-success" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>