@model ProjectItiTeam.Models.Level

@{
    Layout="_LevelsDetailsLayout";
}
<style>
    .button1{
        background-color: #f4ebeb;
        color:#0d6efd;
        font-family:Tahoma;
        padding:5px;
        border-radius:7px;
        transition:all 1s ease;
        padding:8px;
        text-decoration:none;
        cursor:pointer;

    }

    .button2{
      background-color: #f4ebeb;
        color: #198754;
        padding:5px;
        font-family: Tahoma;
        border-radius: 7px;
        transition: all 1s ease;
        text-decoration: none;
        width: 69%;
        cursor:pointer;
    }
    
</style>


<div class="container">
    <div class="row">
            <div class="col-md-8   box-shadow mt-3">
                <h1 class="box-shadow p-1 rounded text-light ">Update The Level</h1>
                    <form asp-action="Create" class="mt-4 p-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                         <input type="hidden" asp-for="Id" />

                        <div class="form-group row">
                            <div class="col-md-2 pl-3">
                                <label asp-for="Name" class="control-label text-primary"></label>
                            </div> 
                            <div class="col-md-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>       
                            </div>
                        </div>
                        <div class="mt-5">
                            <input type="submit" value="Save" class="button2 btn btn-outline-success rounded-pill" />
                            <a class="button1 btn btn-outline-primary rounded-pill" asp-action="Index" >Back to List</a>
                        </div>
                    </form>

            </div>
            <div class="col-md-4 p-2 ">
                <div class="mt-3">
                    <img src="~/assets/img/PhotoLevels/levelsEnglish.jpg" class="img-thumbnail h-100"/>
                    <img src="~/PhotoUser/download (4).png" class="img-thumbnail h-100"/>
                </div>
            </div>

    </div>
</div>











 