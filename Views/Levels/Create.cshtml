@model ProjectItiTeam.Models.Level

@{
    ViewData["Title"] = "Create";
}

<style>
    .button1{
        background-color:red;
        color:white;
        font-family:Tahoma;
        padding:5px;
        border-radius:7px;
        transition:all 1s ease;
        padding:8px;
        text-decoration:none;
        cursor:pointer;

    }
    .button1:hover{
         background-color:wheat;
        color:red;
    }
    .button2{
      background-color: #f4ebeb;
        color: #06092f;
        padding:5px;
        font-family: Tahoma;
        border-radius: 7px;
        transition: all 1s ease;
        text-decoration: none;
        width: 69%;
        cursor:pointer;
    }
    
</style>


<div class="container">
    <div class="row">
            <div class="col-md-8   box-shadow mt-3">
                <h1 class="bg-dark text-light p-1 border ">Create New Level Course</h1>
                    <form asp-action="Create" class="mt-4 p-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-2 pl-3">
                                <label asp-for="Name" class="control-label text-primary"></label>
                            </div> 
                            <div class="col-md-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>       
                            </div>
                        </div>
                        <div class="mt-5">
                            <input type="submit" value="Create" class="button2 " />
                            <a class="button1" asp-action="Index" >Back to List</a>
                        </div>
                    </form>

            </div>
            <div class="col-md-4 p-2 ">
                <div class="mt-3">
                    <img src="~/PhotoUser/images (44).png" class="img-thumbnail h-100"/>
                    <img src="~/PhotoUser/download (4).png" class="img-thumbnail h-100"/>
                </div>
            </div>

    </div>
</div>













 