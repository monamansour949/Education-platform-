@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
 Layout = "~/Views/Shared/_Layout Admain.cshtml";

}

<h1 class="bg-primary m-2 p-1 text-white border rounded mt-3 px-4">Use a local account to  <span class="text-warning">log in..</span></h1>

<div class="container-fluid border p-4 rounded box-shadow">
    <div class="row animate__animated animate__backInLeft">
        <div class="container-fluid row"  >
                <div class="col-md-6">
                      <img src="~/PhotoUser/login.png" class="img-fluid " />
                </div> 
                <div class="col-md-6 mt-5 text-center">
                    <h3 class="text-primary">User Account</h3>
                </div>
        </div>
     
     </div>
        <div class="row">
            <div class="col-md-8">
                   <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-4">
                     <label asp-for="Input.Email"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                         <label asp-for="Input.Password"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Input.Password" class="form-control" />
                         <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                 <div class="row">
                    <div class="col-md-4">
                         <label asp-for="Input.RememberMe"></label>
                    </div>
                    <div class="col-md-8">
                         <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
              <div class="mt-4">
                <button type="submit" class="btn btn-warning w-100">Log in</button>
            </div>
               
                <div class="row m-1">
                    <div class="col-md-4">
                        <a id="forgot-password" class="btn btn-primary w-100" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                    <div class="col-md-4">
                        <a asp-page="./Register" class="btn btn-info w-100" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </div>
                    <div class="col-md-4">
                        <a id="resend-confirmation" class="btn btn-info w-100" asp-page="./ResendEmailConfirmation">Resend email</a>
                    </div>
                </div>
            </form>
            </div>
            <div class="col-md-4">
                <div class="row">
    <div class="col-md-4">
        <section>
         
        </section>
    </div>
    <div class="col">
        <section>
            <h4 class="text-left text-danger">Another Service</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>
            </div>
        </div>
</div>









@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
